<?xml version='1.0' encoding='UTF-8'?>
<pyvcp>
	<vbox>
		<button>
			<text>"Enable"</text>
			<halpin>"enable"</halpin>
		</button>
		<hbox>
			<vbox>
				<label>
					<text>"Axis Selection"</text>
				</label>

				<radiobutton>
					<choices>["X","Y","Z"]</choices>
					<halpin>"axis-selection"</halpin>
				</radiobutton>
			</vbox>
			<vbox>
				<label>
					<text>"Waveform"</text>
				</label>
				<radiobutton>
					<choices>["Square","Triangle","Sine"]</choices>
					<halpin>"waveform-selection"</halpin>
				</radiobutton>
			</vbox>
			<vbox>
				<label>
					<text>"Period"</text>
				</label>
				<scale>
					<font>("Helvetica",16)</font>
					<width>"25"</width>
					<halpin>"period"</halpin>
					<resolution>0.1</resolution>
					<orient>VERTICAL</orient>
					<initval>0.1</initval>
					<min_>10</min_>
					<max_>0.1</max_>
				</scale>
			</vbox>
			<vbox>
				<label>
					<text>"Amplitude"</text>
				</label>
				<scale>
					<font>("Helvetica",16)</font>
					<width>"25"</width>
					<halpin>"amplitude"</halpin>
					<resolution>1</resolution>
					<orient>VERTICAL</orient>
					<initval>1</initval>
					<min_>10</min_>
					<max_>0.1</max_>
				</scale>
			</vbox>
		</hbox>
		<dial>
			<size>200</size>
			<cpr>20</cpr>
			<min_>0</min_>
			<max_>100000</max_>
			<text>"P"</text>
			<initval>0</initval>
			<resolution>0.001</resolution>
			<halpin>"Pgain"</halpin>
			<dialcolor>"yellow"</dialcolor>
			<edgecolor>"green"</edgecolor>
			<dotcolor>"black"</dotcolor>
		</dial>
		<dial>
			<size>200</size>
			<cpr>20</cpr>
			<min_>0</min_>
			<max_>100000</max_>
			<text>"I"</text>
			<initval>0</initval>
			<resolution>0.001</resolution>
			<halpin>"Igain"</halpin>
			<dialcolor>"yellow"</dialcolor>
			<edgecolor>"green"</edgecolor>
			<dotcolor>"black"</dotcolor>
		</dial>
		<dial>
			<size>200</size>
			<cpr>20</cpr>
			<min_>0</min_>
			<max_>100000</max_>
			<text>"D"</text>
			<initval>0</initval>
			<resolution>0.001</resolution>
			<halpin>"Dgain"</halpin>
			<dialcolor>"yellow"</dialcolor>
			<edgecolor>"green"</edgecolor>
			<dotcolor>"black"</dotcolor>
		</dial>
	</vbox>
</pyvcp> 